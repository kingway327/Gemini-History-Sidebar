{
    "manifest_version": 3,
    "name": "Gemini History Sidebar",
    "version": "1.0.0",
    "description": "AI 对话历史记录侧边栏扩展",
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Gemini History",
        "default_icon": {
            "48": "icon.png"
        }
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "https://gemini.google.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://gemini.google.com/*"
            ],
            "js": [
                "src/content.ts"
            ]
        }
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+H",
                "mac": "Command+Shift+H"
            },
            "description": "打开 Gemini 历史侧边栏"
        }
    }
}